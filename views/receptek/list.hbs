{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>Beküldött receptek</h1>
</div>

{{#each receptek}}
<table class="table table-striped table-hover ">
    <thead>
        <tr style="border: 2px solid #dfd7ca">
            <th>{{nev}}</th>
            <th><span style="float: right">({{statusText}}) - Beküldve: {{date}} - By: {{user}} [<a href="/receptek/edit/{{id}}">SZ</a>][<a href="/delete/{{id}}">T</a>]</span></th>
        </tr>   
    </thead>
    <tbody>
        <tr>
            <td colspan="2">{{elkeszites}}</td>
        </tr>
    </tbody>
</table>
{{/each}}

<p><a href="/receptek/new" class="btn btn-default">Új recept beküldése</a></p>